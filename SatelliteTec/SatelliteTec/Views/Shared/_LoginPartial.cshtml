@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav" style="">
        <li>
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "color: white" })
        </li>
        <li style="position: absolute; right: 2%" ><a style="color: #ffffff" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
<ul class="navbar-nav" style="color: #ffffff; position: absolute; right: 2% ">
    <!--
    <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", style = "color: white " })</li>
    <li style="margin-right: 20px; margin-left: 20px">|</li>
        -->

    <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "color: white" })</li>
</ul>


}
